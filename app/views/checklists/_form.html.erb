<body>
  <div class="container">
    <%= simple_form_for @checklist do |f| %> 
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.button :submit %>
      <%= link_to root_path do %>
        <div class="waves-effect waves-light btn">Back</div>
      <% end %>
      <br>
      <br>
      <h1>Question</h1>
      <center><%= link_to new_question_path do %>
        <div class="waves-effect waves-light btn">Add new question</div>
      <% end %>
      </center>
      <br>

    <%= f.fields_for :questions do |form| %>
      <%= form.input :title %>
      <%= form.input :description %>
    <% end %>
    
    <% end %> 
  </div>
</body>

