<center>
  <body>
    <div class="container">
      <h2><%= @checklist.title %></h2>
      <p><%= @checklist.description %></p>
      <br/>

      <%= link_to checklists_path do %>
      <i class="Small material-icons">backspace</i>
      <% end %>

      <%= link_to edit_checklist_path(@checklist) do %>
      <i class="Small material-icons">edit</i>
      <% end %>

      <%= link_to checklist_path(@checklist), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <i class="Small material-icons">delete</i>
      <% end %>

      <center>
        <h2 class="btn-floating btn-large waves-effect waves-light blue">
          <%= link_to new_checklist_question_path(@checklist) do %>
            <i class="material-icons">add</i>
          <% end %>
        </h2>
      </center>

    </div>
  </body>
</center>
