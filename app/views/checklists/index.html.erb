<% if user_signed_in? %>
  <center>
    <h2 class="btn-floating btn-large waves-effect waves-light blue">
      <%= link_to new_checklist_path do %>
        <i class="material-icons">add</i>
      <% end %>
    </h2>
  </center>
<body>
  <div class="container">
  All Checklists -/-/- My Checklists
    <table>
      <tr>
        <td>Title <i>(Number of questions)</i></td>
        <td>Description</td>
        <td>Action</td>
      </tr>
      <% @checklists.each do |checklist| %>
        <tr>
          <td>
            <h5><%= link_to checklist.title, checklist %></h5><i>(Number)</i>
          </td>
          <td> 
            <%= checklist.description %>
          </td>
          <td>
            <%= link_to edit_checklist_path(checklist) do %>
              <i class="Small material-icons">edit</i>
            <% end %>
            <%= link_to checklist_path(checklist), method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="Small material-icons">delete</i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    <center><%= will_paginate @checklists %></center>
  </div>
</body>
<% else %>
  <% render 'layouts/static_page' %>
<% end %>
